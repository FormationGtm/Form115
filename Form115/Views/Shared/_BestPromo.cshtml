@model Tuple<List<DataLayer.Models.Promotions>, int>
@using DataLayer.Models


<div class="panel panel-info ">

    <div class="panel-heading">
        <a href="~/Promotions/Index"><h4>Nos meilleures promotions en cours</h4></a>
    </div>
    <div class="panel-body">

        @foreach (var prod in Model.Item1)
        {
                <a class="btn-info btn-sm btn-promo" href="~/Hotel/Details/@prod.IdHotel/@prod.DateDebut.ToString("yyyy-MM-dd")/@prod.DateFin.ToString("yyyy-MM-dd")">
                    @prod.Hotels.Nom: @prod.Valeur%
                </a>
            <div>@prod.Hotels.Villes.name - @prod.Hotels.Villes.Pays.Name</div>

            <div><strong>Validité:</strong> @prod.DateFin.ToString("dd-MM")</div>
            <br/>

        }
    </div>

</div>

